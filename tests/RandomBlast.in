# *****************************************************************
# Problem size and geometry
# *****************************************************************
geometry.prob_lo     =  0.0  0.0  0.0 
geometry.prob_hi     =  3.086e20  3.086e20  3.086e20  # 100 x 100 x 100 pc
geometry.is_periodic =  1    1    1

# *****************************************************************
# VERBOSITY
# *****************************************************************
amr.v               = 1     # verbosity in Amr

# *****************************************************************
# Resolution and refinement
# *****************************************************************
amr.n_cell          = 64 64 64
amr.max_level       = 1     # number of levels = max_level + 1
amr.blocking_factor = 16     # grid size must be divisible by this
amr.max_grid_size   = 64

refine_threshold = 0.5
do_reflux = 1
do_subcycle = 0
cfl = 0.2
amr_interpolation_method = 1
hydro.reconstruction_order = 3
hydro.abort_on_fofc_failure = 0
derived_vars = temperature

ascent_interval = 50
plotfile_interval = 200
checkpoint_interval = 1000
max_timesteps = 5000

dt_initial = 3.154e10       # 1000 yr
stop_time = 3.154e13       # 1e6 yr

grackle_data_file = "../extern/grackle_data_files/input/CloudyData_UVB=HM2012.h5"
SN_rate_per_volume = 0.03   # yr^-1 kpc^-1
