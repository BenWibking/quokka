hydro.reconstruction_order = 2
hydro.abort_on_fofc_failure = 1
derived_vars = temperature

ascent_interval = 10
plotfile_interval = 10
checkpoint_interval = 10
max_timesteps = 10000

dt_initial = 3.154e10       # 1000 yr
stop_time = 3.154e13       # 1e6 yr

