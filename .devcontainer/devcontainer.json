// devcontainer.json
{
  "name": "quokka-dev",
  "image": "ghcr.io/benwibking/quokka-container:main",
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "-ms-vscode.cpptools", // conflicts with vscode-clangd
        "llvm-vs-code-extensions.vscode-clangd",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-vscode.live-server",
        "lextudio.restructuredtext"
      ]
    }
  },
  "remoteUser": "ubuntu"
}