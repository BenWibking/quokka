// devcontainer.json
    {
      "name": "quokka-dev",
      // (NOTE: using the cloud image is temporarily disabled, since it doesn't exist yet)
      // "image": "ghcr.io/quokka-astro/quokka:development",
      "build": {
        // Path is relative to the devcontainer.json file. We want the Dockerfile in the repo root.
        "dockerfile": "../Dockerfile"
      },
      "customizations": {
        "vscode": {
          "settings": {},
          "extensions": [
            // disabled, since it interferes with clangd
            "-ms-vscode.cpptools",
            "llvm-vs-code-extensions.vscode-clangd",
            "github.vscode-github-actions",
            "github.vscode-pull-request-github",
            "ms-python.python",
            "ms-toolsai.jupyter",
            "ms-vscode.live-server",
            "lextudio.restructuredtext",
            "trond-snekvik.simple-rst",
            "swyddfa.esbonio",
            "tomoki1207.pdf" // this does not work on codespaces
          ]
        }
      },
      "remoteUser": "ubuntu",
      "postCreateCommand": "git submodule update --init"
    }
